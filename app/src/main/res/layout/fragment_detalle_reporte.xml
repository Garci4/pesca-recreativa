<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentDetalleReporte"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/fragmentDetalleReporte"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetalleReporteTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="16dp"
            android:textStyle="bold"
            android:textSize="20sp"
            tools:text="titulo" />

        <ImageView
            android:id="@+id/ivDetalleReporte"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            tools:background="@color/black"
            android:contentDescription="Foto del reporte"/>

        <TextView
            android:id="@+id/tvDetalleReporteDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Descripcion"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8sp"
            android:textStyle="normal"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/tvDetalleReporteLugarCaptura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Lugar captura"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8sp"
            android:textStyle="normal"
            android:textSize="16sp"/>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/mapView"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>